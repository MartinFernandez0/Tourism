<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TourismApp.ViewModels"
             x:Class="TourismApp.Views.DestinationView"
             Title="Destinos"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewModels:DestinationViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto, Auto, Auto"
          Padding="10,20">

        <!-- Barra Superior -->
        <HorizontalStackLayout Grid.Row="0"
                               BackgroundColor="#E8E8E8"
                               Padding="5,10"
                               Spacing="10"
                               HorizontalOptions="Fill">
            <SearchBar x:Name="SearchBar"
                       Text="{Binding FilterText}"
                       Placeholder="Buscar destinos"
                       HorizontalOptions="FillAndExpand"
                       BackgroundColor="#E8E8E8"
                       TextColor="Black" />
        </HorizontalStackLayout>

        <!-- Lista de Destinos -->
        <ScrollView Grid.Row="1">
            <ListView ItemsSource="{Binding Destinations}"
                      SelectedItem="{Binding SelectedDestination}"
                      SelectionMode="Single"
                      IsPullToRefreshEnabled="True"
                      RefreshCommand="{Binding GetDestinationsCommand}"
                      BackgroundColor="Transparent"
                      SeparatorColor="#D6E4FF">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BorderColor="LightGray"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="10"
                                   BackgroundColor="White"
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="10">
                                    <!-- Texto del destino -->
                                    <VerticalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="Black" />
                                        <Label Text="{Binding Description}" 
                                               FontSize="14" 
                                               TextColor="Gray" 
                                               LineBreakMode="WordWrap" />
                                    </VerticalStackLayout>

                                    <!-- Imagen del destino -->
                                    <Image Source="{Binding URL_image}" 
                                           WidthRequest="100" 
                                           HeightRequest="100" 
                                           Aspect="AspectFill" />
                                </HorizontalStackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <!-- Botón para agregar destinos -->
        <Button Text="Agregar"
                Command="{Binding AddDestinationCommand}"
                BackgroundColor="#1E3A5F"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Margin="20,10"
                HeightRequest="50"
                Grid.Row="2" />

        <!-- Botón para editar destinos -->
        <Button Text="Editar"
                Command="{Binding UpdateDestinarionCommand}"
                BackgroundColor="#1E3A5F"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Margin="20,10"
                HeightRequest="50"
                Grid.Row="3" />

        <!-- Botón para eliminar destinos -->
        <Button Text="Eliminar"
                BackgroundColor="#1E3A5F"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Margin="20,10"
                HeightRequest="50"
                Grid.Row="4" />
    </Grid>
</ContentPage>
